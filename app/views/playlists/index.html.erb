<div id="hamburg">
  <input id="input" type="checkbox">
  <div class="burg">
    <label id="label1" for="input">
      <i class="fas fa-times gameguide"></i>
    </label>
  </div>
  <div id="content">
    <div class="pathlink">
      <%= link_to "Top", games_top_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "App", games_app_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "Music", games_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "Play Lists", playlists_path, class: 'path' %>
    </div>
      <% if user_signed_in? %> 
        <div class="pathlink">
          <%= link_to "My Page", user_path(current_user.id), class:'path' %>
        </div>
      <% else %>
        <div class="pathlink">
          <%= link_to 'Sign In', new_user_registration_path, class:"path" %>
        </div>
      <% end %> 
  </div>
</div>

<h1 class = "center mtop mbottom" >Playlist一覧</h1>
<h3 class = "center mtop mbottom" >(最大3曲まで表示)</h3>

<hr>

  <p class="center mtop sp"><%= link_to "Topへ", root_path, class: "whitewhite" %></p>
  <p class="center mtop mbottom sp"><%= link_to "新規プレイリスト作成", new_playlist_path, class: "whitewhite" %></p>
  <p class="center mtop mbottom sp"><%= link_to "game一覧へ", games_path,class: "whitewhite" %></p>
  
<hr>

<div class="tweets-container">
  
  <% @playlists.each do |p| %>
    <h3 class = "center mtop mbottom">＜<%= link_to p.content, playlist_path(p.id),class: "whitewhite" %>＞</h3>

    
    <% p.games.first(3).each do |g| %>
      <p class="center mbottom sp"><iframe width="320" height="180" src="https://www.youtube.com/embed/<%= g.youtube_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></p>
    <% end %>

    <hr>
  <% end %>

    <p class="center mtop sp"><%= link_to "新規プレイリスト作成", new_playlist_path,class: "whitewhite" %></p>
    <p class="center mtop mbottom sp"><%= link_to "game一覧へ", games_path,class: "whitewhite" %></p>
    
    <% if user_signed_in? %>
        <p class="center mtop mbottom sp"><%= link_to "マイページへ", user_path(current_user.id),class: "whitewhite" %>
    <% else %>
      <p class="center mtop mbottom sp"><%= link_to "ログイン", new_user_session_path,class: "whitewhite" %></p>
      <p class="center mtop mbottom sp"><%= link_to "新規登録", new_user_registration_path,class: "whitewhite" %></p>
    <% end %>

</div>