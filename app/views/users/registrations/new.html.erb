<div class = "games_new_body">
  <h3 class = games_new_title_h3>Sign up</h3>
  <div class = "games_new_form_body">



    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      

      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class = "games_new_short_field">
        <div class="field">
          <p><%= f.label :name %></p>
          <%= f.text_field :name, autofocus: true, class: "gameform" %>
        </div>
      </div>  

      <div class = "games_new_short_field mtop">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
      </div>  
    
      <div class="games_new_short_field mtop">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="games_new_short_field actions">
        <%= f.submit "Sign up" %>
      </div>

    <% end %>
  
    </div>

    <p class="whitewhite"><%= render "users/shared/links"%></p>
</div>

