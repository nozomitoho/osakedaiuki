<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.games.each do |t| %>
  
  <%= t.user.name %>
  <%= t.body %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_games.each do |t| %>
  <%= t.user.name %>
  <%= t.body %>
<% end %>

<div>
<%= render "follow_form" %>
</div>

<%= link_to "投稿一覧に戻る", games_path %>