

<div class = "games_new_body">

<div id="hamburg">
  <input id="input" type="checkbox">
  <div class="burg">
    <label id="label1" for="input">
      <i class="fas fa-times gameguide"></i>
    </label>
  </div>
  <div id="content">
    <div class="pathlink">
      <%= link_to "Top", games_top_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "App", games_app_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "Music", games_path, class: 'path' %>
    </div>
    <div class="pathlink">
      <%= link_to "Play Lists", playlists_path, class: 'path' %>
    </div>
      <% if user_signed_in? %> 
        <div class="pathlink">
          <%= link_to "My Page", user_path(current_user.id), class:'path' %>
        </div>
      <% else %>
        <div class="pathlink">
          <%= link_to 'Sign In', new_user_registration_path, class:"path" %>
        </div>
      <% end %> 
  </div>
</div>

  <h3 class = games_new_title_h3>Edit Game</h3>
  <div class = "games_new_form_body">
    <%= form_for @game do |f| %>
      <div class = "games_new_short_field center">
        <p>Title</p>
        <div>
          <%= f.text_field :title, :placeholder => "Game Title", class: "gameform"  %>
        </div
      </div>
      
      <div class = "games_new_long_field mtop center">
        <p>Explanation</p>
        <div class = "games_new_text_field_back center">
          <%= f.text_area :body, :placeholder => "Game Detail" %>
        </div>
      </div>
      <div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div>
        <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
      <% end %>
    </div>
    <% end %>
    </div>
      <div>
        <%= f.submit "投稿する" %>
      </div>
    <% end %>
  </div>



</div>
<p class="center mtop mbottom"><%= link_to "game一覧へ", games_path,class: "whitewhite" %></p>